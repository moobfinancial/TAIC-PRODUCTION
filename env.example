# ============================================
# TAIC Frontend Environment Configuration (Example)
# ============================================
# Copy this file to .env.local and update the values

# =======================
# API Configuration
# =======================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_BASE_URL=http://localhost:9002

# =======================
# Firebase Configuration
# =======================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef123456
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# =======================
# Stripe Configuration
# =======================
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =======================
# Authentication
# =======================
NEXTAUTH_URL=http://localhost:9002
NEXTAUTH_SECRET=your_nextauth_secret

# =======================
# AI Services
# =======================
NEXT_PUBLIC_OPENAI_API_KEY=sk-your-openai-api-key
NEXT_PUBLIC_AGENT_MCP_URL=http://localhost:8001

# =======================
# Feature Flags
# =======================
NEXT_PUBLIC_ENABLE_VOICE_ASSISTANT=true
NEXT_PUBLIC_ENABLE_VIRTUAL_TRY_ON=true
NEXT_PUBLIC_ENABLE_AI_PRODUCT_SEARCH=true

# =======================
# Analytics
# =======================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# =======================
# External Services
# =======================
NEXT_PUBLIC_CJ_API_KEY=your_cj_api_key
NEXT_PUBLIC_LIVEKIT_URL=your_livekit_url
NEXT_PUBLIC_LIVEKIT_API_KEY=your_livekit_api_key

# =======================
# Development Settings
# =======================
NODE_ENV=development
DEBUG=true
